# Audio files
*.wav filter=lfs diff=lfs merge=lfs -text
*.mp3 filter=lfs diff=lfs merge=lfs -text
*.ogg filter=lfs diff=lfs merge=lfs -text
*.flac filter=lfs diff=lfs merge=lfs -text
*.m4a filter=lfs diff=lfs merge=lfs -text
# Large data files
data/transcripts/**/audio/** filter=lfs diff=lfs merge=lfs -text
test_output.wav filter=lfs diff=lfs merge=lfs -text
*.log filter=lfs diff=lfs merge=lfs -text
# Tracking large logs with LFS
large_transcript_processor.log filter=lfs diff=lfs merge=lfs -text
youtube_to_audio.log filter=lfs diff=lfs merge=lfs -text
# Enforce text files to have normalized line endings
*.md text
*.py text
*.js text
*.html text
*.css text
*.json text
*.sh text eol=lf
*.yml text
*.yaml text
# Set linguist language overrides
*.py linguist-language=Python
*.js linguist-language=JavaScript
*.html linguist-language=HTML 
