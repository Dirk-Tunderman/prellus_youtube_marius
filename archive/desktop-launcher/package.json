{
  "name": "youtube-transcript-processor-launcher",
  "version": "1.0.0",
  "description": "Desktop launcher for YouTube Transcript Processor",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . 'YouTube Transcript Processor' --platform=darwin --arch=x64 --out=dist --icon=icons/app.icns --overwrite",
    "package-win": "electron-packager . 'YouTube Transcript Processor' --platform=win32 --arch=x64 --out=dist --icon=icons/app.ico --overwrite"
  },
